<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <input type="checkbox" id="scales" name="scales" checked disabled="true">
      <% else %>
        <input type="checkbox" id="scales" name="scales" disabled="true">
      <% end %>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new Task", new_path %>
